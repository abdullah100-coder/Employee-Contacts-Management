<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".academics"
    android:background="@color/screen"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#242F9B"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:title="GUB Contacts"
                app:titleMarginStart="10dp"
                app:titleTextColor="#ffffff" />



            <LinearLayout
                android:id="@+id/cse"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginTop="50dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/add_expenses_background"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/cse"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="CSE"
                    android:textColor="@color/black"
                    android:textSize="27sp"
                    android:textStyle="bold" />



            </LinearLayout>
            <LinearLayout
                android:id="@+id/eee"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/add_expenses_background"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/eee"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EEE"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="27sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/tex"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/add_expenses_background"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/tex"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEX"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/bus"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/add_expenses_background"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bus"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GBS"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/law"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/add_expenses_background"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/law"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LAW"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/eng"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/add_expenses_background"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/eng"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENG"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/soc"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/add_expenses_background"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/soc"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOC"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="27sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/jmc"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/add_expenses_background"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/jmc"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JMC"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="27sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/headerfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/sidemenu" />

</androidx.drawerlayout.widget.DrawerLayout>