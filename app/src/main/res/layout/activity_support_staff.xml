<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".support_staff"
    android:background="@color/screen"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#242F9B"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:title="GUB Contacts"
                app:titleMarginStart="10dp"
                app:titleTextColor="#ffffff" />


            <LinearLayout
                android:id="@+id/mlss"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginTop="70dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/add_expenses_background"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ml"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="8dp"

                    android:text="MLSS"
                    android:textColor="@color/black"
                    android:paddingTop="3dp"
                    android:textSize="22sp"
                    android:textStyle="bold" />



            </LinearLayout>
            <LinearLayout
                android:id="@+id/cleaner"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/add_expenses_background"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/cleaner"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cleaner"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingTop="3dp"
                    android:textSize="22sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/driver"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/add_expenses_background"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/driver"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingTop="3dp"
                    android:textSize="22sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/helper"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/add_expenses_background"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/helper"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Helper"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingTop="3dp"
                    android:textSize="22sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/others"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/add_expenses_background"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/other"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingTop="3dp"
                    android:textSize="22sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gardener"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/add_expenses_background"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/gardener"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gardener"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingTop="3dp"
                    android:textSize="22sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/SG"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:elevation="2dp"
                android:layout_marginBottom="30dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/add_expenses_background"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sec"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Security Guard"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingTop="3dp"
                    android:textSize="22sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/headerfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/sidemenu" />



</androidx.drawerlayout.widget.DrawerLayout>


